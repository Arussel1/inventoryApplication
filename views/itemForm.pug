extends layout

block content
    div.nav 
      img.logo(src='/images/snackShop.png' alt='Snack Shop Logo')
      button(onclick=`redirect('/')`) Home 
      button(onclick=`redirect('/items')`) Items 
      button(onclick=`redirect('/categories')`) Categories
      button(onclick=`redirect('/brands')`) Brands
    form(action= '/items/' + item.name + '/update' method='POST')
     p.formTitle Update Item
     label(for='name') Name 
     input(type='text' name='name' value=item.name min='1' required)

     label(for='description') Description
     textarea( name='description' rows="3" cols="40" ) #{item.description}

     label(for='price') Price
     input(type='number' name='price' step="0.01" value=item.price min='0')

     label(for='quantity') Quantities
     input(type='number' name='quantity' value=item.quantity min='1')

     label(for='category') Category
     select(name='category')
      each cat in item.allcategories
        if item.category == cat
          option(value=cat selected) #{cat}
        else
          option(value=cat) #{cat}
    
          
     label(for='brand') Brand
     select(name='brand')
      each brand in item.allbrand
        if item.brand == brand
          option(value=brand selected) #{brand}
        else
          option(value=brand) #{brand}
     
     label(for='image') Image (web URL)
     input(type='text' name='image' value=item.image min='1' required)
     br
          
     button(type='submit') Submit
  
    each error in errors 
     p #{error.msg}